<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.theo.marsstory.app.ui.StoryActivity">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/page0"
      android:id="@+id/storyImageView" android:layout_alignParentTop="true" android:layout_alignParentStart="false"
      android:adjustViewBounds="true" android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
      android:layout_alignParentEnd="false"/>

  <Button
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="choice0"
      android:id="@+id/choice0"
      android:background="#ffffffff" android:textColor="#ff6ec3ff"
      android:layout_above="@+id/choice1" android:layout_alignParentStart="true" android:longClickable="true"
      />

  <Button
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="choice1"
      android:id="@+id/choice1"
      android:background="#ffffffff" android:textColor="#ff6ec3ff"
      android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="New Text"
      android:id="@+id/storyDescription"
      android:layout_alignParentEnd="true"
      android:layout_alignParentStart="true" android:layout_above="@+id/choice0" android:layout_below="@+id/storyImageView"/>

</RelativeLayout>
