<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.theo.marsstory.app.ui.MainActivity" android:background="#ffffffff">


  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/main_title"
      android:id="@+id/imageView" android:layout_alignParentTop="true" android:layout_alignParentStart="false"
      android:adjustViewBounds="true" android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
      android:layout_alignParentEnd="false"/>
  <EditText
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:text="Enter your name to begin"
      android:ems="10"
      android:id="@+id/editText"
      android:enabled="false" android:paddingLeft="32dp" android:paddingRight="32dp"
      android:layout_below="@+id/imageView" android:layout_alignParentStart="true" android:layout_marginTop="2dp"
      android:layout_marginLeft="32dp" android:layout_marginRight="32dp"/>
  <Button
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="START YOUR ADVENTURE"
      android:id="@+id/runStoryActivityButton" android:layout_centerHorizontal="true"
      android:background="#ffffffff" android:textColor="#ff6ec3ff" android:layout_alignParentBottom="true"/>

</RelativeLayout>
